{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Iinclude",
                "-Ibox2D",
                "-ISFML",
                "-ISFML",
                "-ISFML/Audio",
                "-ISFML/Graphics",
                "-ISFML/Network",
                "-ISFML/System",
                "-ISFML/Window",
				"-Isrc/dynamics",
				"src/*.cc",
                "-o",
                "bin/game.exe",
                "lib/libopenal32.a",
                "lib/libsfml-audio.a",
                "lib/libsfml-graphics.a",
                "lib/libsfml-window.a",
                "lib/libsfml-system.a",
                "lib/libsfml-main.a",
                "lib/libsfml-network.a"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\Program Files (x86)\\mingw-w64\\i686-8.1.0-posix-dwarf-rt_v6-rev0\\mingw32\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}